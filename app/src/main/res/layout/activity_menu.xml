<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"

    tools:context=".Menu">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCartConnect"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_x="85dp"
            android:layout_y="1dp"
            android:fontFamily="@font/font_poppins"
            android:text="CONNECT YOUR CART"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="8dp" />

        <ImageButton
            android:id="@+id/imageCartConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonLogin"
            android:layout_x="301dp"
            android:layout_y="4dp"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/outline_add_circle_outline_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonScanProducts"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_x="85dp"
            android:layout_y="100dp"
            android:fontFamily="@font/font_poppins"
            android:text="USE PHONE AS SCANNER"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="8dp" />

        <ImageButton
            android:id="@+id/imageScanProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonLogin"
            android:layout_x="303dp"
            android:layout_y="104dp"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/baseline_qr_code_scanner_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartShopping"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_x="85dp"
            android:layout_y="200dp"
            android:fontFamily="@font/font_poppins"
            android:text="START SHOPPING"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="8dp" />


        <ImageButton
            android:id="@+id/imageStartShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonLogin"
            android:layout_x="301dp"
            android:layout_y="203dp"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/outline_shopping_cart_checkout_24" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewRecents"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_x="85dp"
            android:layout_y="300dp"
            android:fontFamily="@font/font_poppins"
            android:text="VIEW RECENT SHOPPING"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="8dp" />

        <ImageButton
            android:id="@+id/imageViewRecents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonLogin"
            android:layout_x="301dp"
            android:layout_y="303dp"
            android:backgroundTint="@color/colorAccent"
            app:srcCompat="@drawable/baseline_history_24" />
    </AbsoluteLayout>
</LinearLayout>